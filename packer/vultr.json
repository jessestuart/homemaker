{
  "variables": {
    "vultr_api_key": "{{env `VULTR_API_KEY`}}"
  },
  "builders": [
    {
      "type": "vultr",
      "api_key": "{{user `vultr_api_key`}}",
      "description": "My Awesome App",
      "region_name": "Chicago",
      "plan_name": "1024 MB RAM,25 GB SSD,1.00 TB BW",
      "os_name": "CentOS 7.4 x64",
      "ssh_username": "root",
      "shutdown_command": "/usr/sbin/shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install_ansible.sh"
    },
    {
      "type": "shell",
      "inline": ["sleep 30", "sudo yum -y update", "sudo yum install -y python"]
    },
    {
      "type": "ansible-local",
      "galaxy_file": "./ansible/requirements.yml",
      "host_vars": "./ansible/host_vars/",
      "role_paths": [
        "./ansible/roles/",
        "./ansible/roles/base",
        "./ansible/roles/dotfiles",
        "./ansible/roles/gtm",
        "./ansible/roles/homemaker",
        "./ansible/roles/nginx",
        "./ansible/roles/nvim",
        "./ansible/roles/opsec",
        "./ansible/roles/rcm",
        "./ansible/roles/ssh-users",
        "./ansible/roles/tmux",
        "./ansible/roles/zsh"
      ],
      "playbook_file": "./ansible/bootstrap.yml"
    }
  ]
}
