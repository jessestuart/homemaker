{
  "variables": {
    "ansible_connection": "docker",
    "ansible_host": "default",
    "base_image": "base/archlinux",
    "vm_name": "jessestuart/homemaker-arch"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `base_image` }}",
      "privileged": true,
      "export_path": "./build/{{user `vm_name`}}-image.tar",
      "changes": [
        "VOLUME /var/run/docker.sock:/var/run/docker.sock"
      ],
      "run_command": [
        "-dit",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible/bootstrap.yml",
      "user": "root",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}} project={{user `vm_name`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "artifice",
      "files": "./build/{{user `vm_name`}}-image.tar"
    },
    [
      {
        "type": "docker-import",
        "repository": "{{user `vm_name`}}",
        "tag": "latest"
      }
    ]
  ]
}
