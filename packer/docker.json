{
  "variables": {
    "ansible_connection": "docker",
    "ansible_host": "default",
    "base_image": "archlinux/base",
    "vm_name": "jessestuart/homemaker-arch",
    "username": "vagrant"
  },
  "builders": [
    {
      "type": "docker",
      "image": "{{ user `base_image` }}",
      "privileged": true,
      "export_path": "./build/{{user `vm_name`}}-image.tar",
      "changes": [
        "VOLUME /var/run/docker.sock:/var/run/docker.sock"
      ],
      "run_command": [
        "-d",
        "-i",
        "-t",
        "--name",
        "{{user `ansible_host`}}",
        "{{.Image}}",
        "/bin/bash"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "useradd --create-home -s /bin/bash vagrant && echo -n 'vagrant:vagrant' | chpasswd && mkdir -p /etc/sudoers.d && touch /etc/sudoers.d/vagrant && echo 'vagrant ALL = NOPASSWD: ALL' > /etc/sudoers.d/vagrant && chmod 440 /etc/sudoers.d/vagrant && mkdir -p /home/vagrant/.ssh && chmod 700 /home/vagrant/.ssh",
        "yes | pacman -Syu haveged && systemctl start haveged && systemctl enable haveged && rm -fr /etc/pacman.d/gnupg && pacman-key --init && pacman-key --populate archlinux",
        "yes | pacman -S python sudo"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./ansible/bootstrap.yml",
      "user": "vagrant",
      "extra_arguments": [
        "--extra-vars",
        "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}",
        "--skip-tags",
        ""
      ]
    }
  ],
  "post-processors": [
    {
      "type": "artifice",
      "files": "./build/{{user `vm_name`}}-image.tar"
    },
    [
      {
        "type": "docker-import",
        "repository": "{{user `vm_name`}}",
        "tag": "latest"
      }
    ]
  ]
}
